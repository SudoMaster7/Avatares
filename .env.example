# ─── Supabase ─────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key – SERVER SIDE ONLY (never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ─── AI / Speech ──────────────────────────────────────────
OPENAI_API_KEY=your_openai_api_key
GROQ_API_KEY=your_groq_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
DEEPGRAM_API_KEY=your_deepgram_api_key
WHISPER_API_KEY=your_whisper_api_key
# Lemonfox TTS (good quality, cost-effective)
# Get API key at: https://www.lemonfox.ai
LEMONFOX_API_KEY=your_lemonfox_api_key

# ─── Stripe (Payments) ────────────────────────────────────
# Keys: https://dashboard.stripe.com/apikeys
# Use sk_test_* for Sandbox, sk_live_* for Production
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx
# Price IDs – create in Stripe Dashboard > Products
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY=price_xxxx
NEXT_PUBLIC_STRIPE_PRICE_ANNUAL=price_xxxx

# ─── Upstash Redis (Cache + Rate Limiting) ────────────────
# Free tier at: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxx

# ─── App ──────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000